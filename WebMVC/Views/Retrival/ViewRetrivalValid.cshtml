@model PagedList.IPagedList<webmvc.entityframework.retrival>
@using PagedList.Mvc;
@using System.Web.Mvc;
@{
       ViewBag.Title = "ViewRetrivalValid";
       Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{
    Danh sách Retrival Valid
    }


<h2>Retrival Valid</h2>
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Retrival Code</th>
                            <th>Account Number</th>
                            <th>Merchant Code</th>
                            <th>Transaction Code</th>
                            <th>Transaction Date</th>
                            <th>Report Date</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.RetrivalCode">
                                <td>
                                    @Html.ActionLink(@item.RetrivalCode, "ViewDetail_Retrival", "Retrival",
            new { RetrivalCode = @item.RetrivalCode, @name = "Retrivalcode" }, null)
                                </td>
                                <td>@item.AccountNumber</td>
                                <td>@item.MerchantCode</td>
                                <td>@item.TransactionCode</td>
                                <td>@item.TransactionDate.Value.ToString("yyyy-MM-dd")</td>
                                <td>@item.ReportDate.Value.ToString("yyyy-MM-dd")</td>
                                <td>@item.Amout</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, Page => Url.Action("Index", "Retrival", new { Page }))
            </div>
            <div class="panel-body">
                <div class="row">

                </div>
            </div>
        </div>
    </div>
</div>

