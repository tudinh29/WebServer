@model PagedList.IPagedList<WebMVC.EntityFramework.RETRIVAL>
@using PagedList.Mvc;
@using System.Web.Mvc;
@{
    ViewBag.Title = "Retrival";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{
    Danh sách Retrival
}

<div class="col-lg-12">
    <div class="row">
       
        @using (Html.BeginForm("FindRetrivalElement", "Retrival", FormMethod.Get))
        {
            <div class="col-sm-3">
                <input type="text" class="form-control" name="searchString" />
            </div>
            <div class="col-sm-1">
                <button class="btn btn-primary" type="submit" style="border:0">Find</button>
            </div>
        }
    </div>
    <br />
</div>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Retrival Code</th>
                            <th>Account Number</th>
                            <th>Merchant Code</th>
                            <th>Transaction Code</th>
                            <th>Transaction Date</th>
                            <th>Report Date</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.RetrivalCode">
                                <td>
                                    @Html.ActionLink(@item.RetrivalCode, "ViewDetail_Retrival", "Retrival",
                                         new { RetrivalCode = @item.RetrivalCode, @name = "Retrivalcode" }, null)
                                </td>
                                <td>@item.AccountNumber</td>
                                <td>@item.MerchantCode</td>
                                <td>@item.TransactionCode</td>
                                <td>@item.TransactionDate.Value.ToShortDateString()</td>
                                <td>@item.ReportDate.Value.ToShortDateString()</td>
                                <td>@item.Amout</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, Page => Url.Action("Index", "Retrival", new { Page }))
            </div>
            <div class="panel-body">
                <div class="row">

                </div>
            </div>
        </div>
    </div>
</div>


