
@model List<WebMVC.Models.TransInvalidTiny>

    @using PagedList.Mvc;
    @using System.Web.Mvc;
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Transaction Invalid</h2>

    @using (Html.BeginForm("Index", "TRANSACTION_DETAIL_INVALID", FormMethod.Get))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-3"></div>
                <div class="col-md-4">
                    <input type="text" id="search" value="@ViewBag.searchString" name="searchString" class="form-control" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-info">Tìm</button>
                </div>
            </div>
        </div>
        <br /><br />
        <script type="text/javascript">
            window.onload = function () {
                document.getElementById("search").focus();
            };
        </script>
    }

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Transaction Code</th>
                                <th>Merchant Code</th>
                                <th>Transaction Type</th>
                                <th>Account Number</th>
                                <th>Card Type</th>
                                <th>Amount</th>
                                <th>Error Message</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.TransactionCode">
                                    <td>
                                        @item.TransactionCode
                                    </td>
                                    <td>@item.MerchantCode</td>


                                    <td>@item.TransactionTypeCode</td>
                                    <td>@item.AccountNumber</td>
                                    <td>@item.CardtypeCode</td>
                                    <td>@item.TransactionAmount</td>
                                    <td>@item.ErrorMessage</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (ViewBag.TotalPage > 1)
                    {
                        var pageDisplay = (int)ViewBag.MaxPage;
                        int totalPage = (int)ViewBag.TotalPage;
                        int currentPage = (int)ViewBag.Page;

                        var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
                        var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);
                        <nav>
                            <ul class="pagination">
                                <li>
                                    @Html.ActionLink("Trang đầu", "Index", "TRANSACTION_DETAIL_INVALID", new { page = ViewBag.First, searchString = ViewBag.searchString }, null)
                                </li>
                                @for (int i = startPageIndex; i <= endPageIndex; i++)
                                {
                                    <li>
                                        @Html.ActionLink(i.ToString(), "Index", "TRANSACTION_DETAIL_INVALID", new { page = i, searchString = ViewBag.searchString }, null)
                                    </li>
                                }
                                <li>
                                    @Html.ActionLink("Trang cuối", "Index", "TRANSACTION_DETAIL_INVALID", new { page = ViewBag.Last, searchString = ViewBag.searchString }, null)
                                </li>
                            </ul>
                        </nav>
                    }
                </div>

            </div>
        </div>
    </div>
    <div class="col-md-10 text-right">
        <a href="@Url.Action("ExportToExcel", "TRANSACTION_DETAIL_INVALID", new {searchString = @ViewBag.search})" class="btn btn-primary btn-lg">Excel</a>
        <a href="@Url.Action("ExportToPDF", "TRANSACTION_DETAIL_INVALID", new { searchString = @ViewBag.search})" class="btn btn-primary btn-lg">PDF</a>
        <a href="@Url.Action("ExportToCSV", "TRANSACTION_DETAIL_INVALID", new { searchString = @ViewBag.search })" class="btn btn-primary btn-lg">CSV</a>
    </div>


