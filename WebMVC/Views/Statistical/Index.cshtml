@model PagedList.IPagedList<WebMVC.Models.MerchantSummaryDailyTiny>
@using PagedList.Mvc;
@using System.Web.Mvc;
@{
    ViewBag.Title = "Statistical";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var merchantSummary = ViewBag.marchantSummary as List<WebMVC.Models.MerchantSummaryDailyTiny>;
}

@*<button href="@Url.Action("Index","Statistical")" class= "btn btn-primary btn-lg">Thống kê</button>*@
@section header{
    Thống kê các Merchant
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Report Date</th>
                            <th>Merchant Code</th>
                            <th>Sale Amount</th>
                            <th>Return Amount</th>
                            <th>Region Code</th>
                            <th>Merchant Type</th>
                            <th>Agent Code</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.MerchantCode">
                                <td>@item.ReportDate</td>
                                <td>@item.MerchantCode</td>
                                <td>@item.SaleAmount</td>
                                <td>@item.ReturnAmount</td>
                                <td>@item.RegionCode</td>
                                <td>@item.MerchantType</td>
                                <td>@item.AgentCode</td>
                            </tr>
                            
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, Page => Url.Action("Index", "Statistical", new { Page }))
            </div>
            <div class="panel-body">
                <div class="row">

                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-10 text-right">

    @Html.ActionLink("Chi tiết", "Detail", "Statistical", new { listMerchant = Model }, new { @class = "btn btn-primary btn-lg" })
    <a href="@Url.Action("ExportExcel", "Statistical")" class="btn btn-primary btn-lg">Excel</a>
    <a href="@Url.Action("ExportPDF", "Statistical")" class="btn btn-primary btn-lg">PDF</a>
    <a href="@Url.Action("ExportCSV", "Statistical")" class="btn btn-primary btn-lg">CSV</a>
</div>
