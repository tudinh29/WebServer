@{
    ViewBag.Title = "Statistical";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var merchantSummary = ViewBag.marchantSummary as List<WebMVC.Models.MerchantSummaryDailyTiny>;
}
@section header{
    Thống kê các Merchant
}
@{ 
    var all = ViewBag.leg;
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="pull-left">
                <div class="pull-left" style="padding-right:20px;">
                    <select id="ChangeRow" class="form-control">
                        <option value="@all">ALL</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                        <option value="200">200</option>
                    </select>
                </div>
            </div>
            <div class="pull-right">
                <form class="navbar-form" id="form-search" role="search" action="#">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search" id="search" name="search">
                    </div>
                </form>
            </div>
            <table id="table-statis" class="table table-striped table-responsive table-bordered tablesorter">
                <thead>
                    <tr>
                        <th>Merchant Code</th>
                        <th>Sale Amount</th>
                        <th>Sale Count</th>
                        <th>Return Amount</th>
                        <th>Return Count</th>
                        <th>Net Amount</th>
                        <th>TransactionCount</th>
                        <th>Keyed Count</th>
                        <th>Report Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.MerchantCode">
                            <td>@item.MerchantCode</td>
                            <td>@item.SaleAmount</td>
                            <td>@item.ReturnAmount</td>
                            <td>@item.SaleCount</td>
                            <td>@item.ReturnCount</td>
                            <td>@item.NetAmount</td>
                            <td>@item.TransactionCount</td>
                            <td>@item.KeyedCount</td>
                            <td>@item.ReportDate</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="10">
                            <center>
                                <div id="ChangePage">
                                </div>
                            </center>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>


<div class="col-md-10 text-right">
    @Html.ActionLink("Chi tiết", "Detail", "Statistical", new { listMerchant = Model }, new { @class = "btn btn-primary btn-lg" })
    <a href="@Url.Action("Detail", "Statistical")" class="btn btn-primary btn-lg">Excel</a>
    <a href="@Url.Action("ExportPDF", "Statistical")" class="btn btn-primary btn-lg">PDF</a>
</div>


