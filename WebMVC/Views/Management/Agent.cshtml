@model PagedList.IPagedList<WebMVC.EntityFramework.AGENT>
@using PagedList.Mvc;
@using System.Web.Mvc;
@{
    ViewBag.Title = "Agent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{
   Danh sách các Agent
}
<script type="text/javascript">
    function OnComplete(code) {
        var id = "#btnStatus_" + code
        var currentStatus = $(id).text();
        if (currentStatus == 'ACTIVE') {
            $(id).removeClass('btn btn-success').addClass('btn btn-danger')
            $(id).text('INACTIVE');
        } else {
            $(id).removeClass('btn btn-danger').addClass('btn btn-success')
            $(id).text('ACTIVE');
        }

    }
</script>
    <div class="row">
        <div class="col-md-1"><button class="btn btn-primary">Add new</button></div>
        @using (Html.BeginForm("ReloadAgents", "Management", FormMethod.Get))
        {
            <div class="col-md-2"><button class="btn btn-info" type="submit">All Agents</button></div>
        }
        
    </div>
    <br /><br />
@using (Html.BeginForm("Agent", "Management", FormMethod.Get))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-2">
            </div>
            <div class="col-md-3">
                <input class="form-control" type="text" value="@ViewBag.agentCode" id="agentCode" name="agentCode" placeholder="Nhập AgentCode" />
            </div>
            <div class="col-md-1">

            </div>
            <div class="col-md-3">
                <input class="form-control" type="text" value="@ViewBag.agentName" name="agentName" placeholder="Nhập tên agent" />
            </div>
            <div class="col-md-2">
                <button class="btn btn-info" type="submit" >Tìm kiếm</button>
            </div>
            <br /><br /><br />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-2">
            </div>
            <div class="col-md-3">
                <input class="form-control" type="text" value="@ViewBag.cityCode" name="cityCode" placeholder="Nhập thành phố" />
            </div>
            <div class="col-md-1">

            </div>
            <div class="col-md-3">
                <input class="form-control" type="text" value="@ViewBag.address" name="address" placeholder="Nhập địa chỉ" />
            </div>
            <br /><br /><br />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-2">
            </div>
            <div class="col-md-3">
                <input class="form-control" type="text" value="@ViewBag.owner" name="owner" placeholder="Nhập owner" />
            </div>
            <br /><br /><br />
        </div>
    </div>
    <script type="text/javascript">
        window.onload = function () {
            document.getElementById("agentCode").focus();
        };
    </script>
}
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Agent Code</th>
                            <th>Agent Name</th>
                            <th>Status</th>
                            <th>Owner</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>Last Active Date</th>
                            <th>Closed Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.AgentCode">
                                <td>
                                    @Html.ActionLink(@item.AgentCode, "ViewDetail_Agent", "Management",
                                            new { agentCode = @item.AgentCode }, null)
                                </td>
                                <td>@item.AgentName</td>
                                <td>

                                    @if (Convert.ToChar(@item.AgentStatus) == 'A')
                                    {
                                        @Ajax.ActionLink("ACTIVE", "ChangeStatus", "Management", new { @id = item.AgentCode }, new AjaxOptions
                                               {
                                                   OnComplete = "OnComplete('" + @item.AgentCode + "')",
                                                   HttpMethod = "Post"
                                               }, new { id = "btnStatus_" + @item.AgentCode, @class = "btn btn-success" })

                                    }
                                    else
                                    {
                                        @Ajax.ActionLink("INACTIVE", "ChangeStatus", "Management", new { @id = item.AgentCode }, new AjaxOptions
                                               {
                                                   OnComplete = "OnComplete('" + @item.AgentCode + "')",
                                                   HttpMethod = "Post"
                                               }, new { id = "btnStatus_" + @item.AgentCode, @class = "btn btn-danger" })

                                    }
                                </td>
                                <td>@item.Owner</td>
                                <td>@item.Address1</td>
                                <td>@item.CityCode</td>
                                <td>@item.LastActiveDate</td>
                                <td>@item.CloseDate</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, Page => Url.Action("Agent", "Management", new { Page, @agentCode = @ViewBag.agentCode, @agentName = @ViewBag.agentName, @cityCode = @ViewBag.cityCode, @address = @ViewBag.address, @owner = @ViewBag.owner }))
            </div>
            <div class="panel-body">
                <div class="row">

                </div>
            </div>
        </div>
    </div>
</div>


