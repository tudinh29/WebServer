@model PagedList.IPagedList<WebMVC.EntityFramework.RETRIVAL_INVALID>
@using PagedList.Mvc;
@using System.Web.Mvc;
@{
    ViewBag.Title = "Retrival Invalid";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}
@section header{
    Danh sách Retrival Invalid
}

<div class="col-lg-12">
    <div class="row">
        @using (Html.BeginForm("Index", "RetrivalInvalid", FormMethod.Get))
        {
            <div class="col-sm-3">
                <input type="text" class="form-control" name="searchString" placeholder="Search"/>
            </div>
            <div class="col-sm-1">
                <button class="btn btn-primary" type="submit" style="border:0">Search</button>
            </div>
        }
    </div>
    <br />
</div>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Retrival Code</th>
                            <th>Account Number</th>
                            <th>Merchant Code</th>
                            <th>Transaction Code</th>
                            <th>Transaction Date</th>
                            <th>Report Date</th>
                            <th>Amount</th>
                            <th>Error Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.RetrivalCode">
                                <td>@item.RetrivalCode</td>
                                <td>@item.AccountNumber</td>
                                <td>@item.MerchantCode</td>
                                <td>@item.TransactionCode</td>
                                <td>@item.TransactionDate.Value.ToString("yyyy-MM-dd")</td>
                                <td>@item.ReportDate.Value.ToString("yyyy-MM-dd")</td>
                                <td>@item.Amout</td>
                                <td>@item.ErrorMessage</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, Page => Url.Action("Index", "RetrivalInvalid", new { Page }))
            </div>
            <div class="panel-body">
                <div class="row">

                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-10 text-right">
    <a href="@Url.Action("ExportExcel", "RetrivalInvalid")" class="btn btn-primary btn-lg">Excel</a>
    <a href="@Url.Action("ExportPDF", "RetrivalInvalid")" class="btn btn-primary btn-lg">PDF</a>
    <a href="@Url.Action("ExportCSV", "RetrivalInvalid")" class="btn btn-primary btn-lg">CSV</a>
</div>

